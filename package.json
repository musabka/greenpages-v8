{
  "name": "greenpages",
  "version": "1.0.0",
  "private": true,
  "description": "النواة الخضراء - الصفحات الخضراء | Green Core - Green Pages",
  "author": "Green Core Team",
  "license": "UNLICENSED",
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/*\" dev",
    "dev:api": "pnpm --filter @greenpages/api dev",
    "dev:web": "pnpm --filter @greenpages/web dev",
    "dev:admin": "pnpm --filter @greenpages/admin dev",
    "build": "pnpm --filter \"./apps/*\" build",
    "build:api": "pnpm --filter @greenpages/api build",
    "build:web": "pnpm --filter @greenpages/web build",
    "build:admin": "pnpm --filter @greenpages/admin build",
    "lint": "pnpm --parallel --filter \"./apps/*\" lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "pnpm --filter @greenpages/database generate",
    "db:migrate": "pnpm --filter @greenpages/database migrate:dev",
    "db:push": "pnpm --filter @greenpages/database push",
    "db:seed": "pnpm --filter @greenpages/database seed",
    "db:studio": "pnpm --filter @greenpages/database studio",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "clean": "rimraf **/node_modules **/dist **/.next **/.turbo"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}
